
<h1>Hello, World!</h1>

<% @blog_posts.each do |blog_post| %>
 <div>
  <h2><%= link_to blog_post.title, blog_post %></h2>
  <% if blog_post.draft? %>
    <div class="p-2 rouded bg-gray-100 bg-gray-900">Draft</div>
  <% elsif blog_post.scheduled? %>
    <div class="p-2 rounded bg-blue-100 bg-blue-900">Scheduled</div>
  <% end %>
  <p><%= blog_post.content %></p>
</div>
<% end %>

<div class="my-16">
  <%== pagy_nav(@pagy) %>
</div>
